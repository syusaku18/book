<main>
  <div class="container">
    <div class="row">
      <%= render 'books/list', book: @book, user: @user%>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <th>
              <%= image_tag user.get_profile_image(100,100) %>
            </th>
            <th>
              <%= user.name %>
            </th>
            <th>
              <%= link_to 'Show', user_path(user.id) %>
            </th>

          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>